<form class="search-form" method="GET" action="/search">
    <div class="row g-2">
        <div class="col">
            <div class="input-group">
                <input type="text" class="form-control" name="q" placeholder="{{ t('site.search.search') }}" required>
                <button class="btn btn-link where-is-this" type="button"
                    title="{{ t('site.search.where_am_i_title') }}">
                    {{ t('site.search.where_am_i') }}
                </button>
                <button class="btn btn-primary" type="submit" title="{{ t('action.submit') }}">
                    <svg width="22" height="20">
                        <circle cx="13" cy="7" r="6.5" fill="#fff8" stroke="#fff"></circle>
                        <path d="M9.75 12.629 A6.5 6.5 0 0 1 7.371 10.25" fill="none" stroke="#fff" stroke-width="1.5">
                        </path>
                        <line x1="1" y1="19" x2="6.5" y2="13.5" stroke="#fff8" stroke-width="2"></line>
                        <line x1="1.5" y1="18.5" x2="6" y2="14" stroke="#fff" stroke-width="2.5"></line>
                        <line x1="6.5" y1="13.5" x2="8.5" y2="11.5" stroke="#fff" stroke-width="1.5"></line>
                    </svg>
                </button>
            </div>
        </div>

        <div class="col-auto">
            <a class="btn btn-primary" href="/directions" title="{{ t('site.search.get_directions_title') }}">
                <svg width="28" height="20">
                    <path d="M11.5 9.5 v-3h3v-1l-5 -5l-5 5v1h3v6" fill="none" stroke="#fff8"></path>
                    <path d="M7.5 19.5h4v-5a1 1 0 0 1 1 -1h5v3h1l5 -5l-5 -5h-1v3h-6a4 4 0 0 0 -4 4z" fill="#fff8"
                        stroke="#fff"></path>
                </svg>
            </a>
        </div>
    </div>
</form>
