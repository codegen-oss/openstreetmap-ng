{% extends 'settings/_base.jinja2' %}
{% block title_prefix %}{{ t('settings.authorizations.title') }} | {% endblock %}
{% block body_class %}settings-applications-body{% endblock %}
{% block settings_active_href %}/settings/applications{% endblock %}
{% block settings_title %}{{ t('settings.applications') }}{% endblock %}
{% block settings_body %}

    {% set nav_active_href = "/settings/applications" %}
    {% include 'settings/applications/_nav.jinja2' %}

    <p>{{ t('settings.authorizations.description') }}</p>
    <ul class="applications-list list-unstyled">
        {% set expanded = false %}
        {% for token in tokens %}
            {% set app = token.application %}
            {% if app.client_id != 'SystemApp.pat' %}
                <li>{% include 'settings/applications/_application_entry.jinja2' %}</li>
            {% endif %}
        {% endfor %}
    </ul>

{% endblock %}
